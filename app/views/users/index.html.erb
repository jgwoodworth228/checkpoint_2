<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Telephone</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
        <% if current_user.id == user.id %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.telephone %></td>
            <td>
              <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>

                <a href="/users/<%= user.id %>/edit" class="btn btn-warning">Edit</a>
                <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
